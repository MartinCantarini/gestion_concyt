<div class="container text-left">
<div class="row">
    <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
    <div class="col-md-2">
        &nbsp;
    </div>
    <div class="col-md-10">
      <h2>Reenviar instrucciones de confirmación</h2>
      <%=render 'devise/errors_devise'%>
    </div>

  <div class="col-md-2">
      &nbsp;
  </div>
  <div class="col-md-8">
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, :required => true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email),class: "form-control" %>
      </div>

      <div class="actions">
        <br /><%= f.submit "Reenviar instrucciones de confirmación" ,class: "btn btn-default"%>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
  <div class="col-md-2">
    &nbsp;
  </div>
</div>
</div>
