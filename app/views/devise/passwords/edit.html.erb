<div class="container text-left">
<div class="row">
  <div class="col-md-2">
    &nbsp;
  </div>
  <div class="col-md-10">
    <h2>Cambiar contraseña</h2>
    <br />
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%=render 'devise/errors_devise'%>
    <%= f.hidden_field :reset_password_token %>
  </div>
  <div class="col-md-2">
    &nbsp;
  </div>
  <div class="col-md-8">
    <div class="field">
      <%= f.label :password, "Nueva contraseña" %><br />
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> caracteres como mínimo)</em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "off",:required => true,class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "Confirmar nueva contraseña" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off",:required => true,class: "form-control" %>
    </div>

    <div class="actions">
      <br />
      <%= f.submit "Continuar" %>
    </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
  <div class="col-md-2">
    &nbsp;
  </div>
  </div>
  </div>
