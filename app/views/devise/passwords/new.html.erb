<div class="container text-left">
<div class="row">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <div class="col-md-2">
      &nbsp;
  </div>
  <div class="col-md-10">
    <h2>Olvidó su contraseña?</h2>
    <%=render 'devise/errors_devise'%>
  </div>
  <div class="col-md-2">
      &nbsp;
  </div>
  <div class="col-md-8">
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, :required => true ,class: "form-control"%>
    </div>

    <div class="actions">
    	<br />
      <%= f.submit "Enviarme instrucciones para recuperar mi contraseña", class: "btn btn-default"%>
      <%= render "devise/shared/links" %>
    </div>
  </div>
  <div class="col-md-2">
      &nbsp;
  </div>
<% end %>


</div>
</div>
