
  $('#poster_formato').change(function () {
    if($(this).val()==parseInt("1"))
       {
       $('#imagenes_formato_1').show();
       $('#imagenes_formato_2').hide();
       <%if @poster.logo.blank?%>
        $('#poster_logo').attr('required', true);
       <%end%>
       <%if @poster.img1a.blank?%>
        $('#poster_img1a').attr('required', true);
       <%end%>
       <%if @poster.img1b.blank?%>
        $('#poster_img1b').attr('required', true);
       <%end%>
       $('#poster_img2').attr('required', false);
       }
    else
       {
       $('#imagenes_formato_2').show();
       $('#imagenes_formato_1').hide();
       <%if @poster.logo.blank?%>
        $('#poster_logo').attr('required', true);
       <%end%>
       <%if @poster.img2.blank?%>
        $('#poster_img2').attr('required', true);
       <%end%>
       $('#poster_img1a').attr('required', false);
       $('#poster_img1b').attr('required', false);
    }
  });

  $('#poster_logo').on('change', function(event) {
    $('#logo_preview_last').hide();
    var files = event.target.files;
    var image = files[0]
    var reader = new FileReader();
    reader.onload = function(file) {
      var img = new Image();
      console.log(file);
      img.src = file.target.result;
      img.width = 100;
      img.eight = 100;
      $('#logo_preview_now').html(img);
    }
    reader.readAsDataURL(image);
    console.log(files);
  });

